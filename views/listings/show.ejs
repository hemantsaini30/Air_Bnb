
<% layout("/layouts/boilerplate")%>
<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(list) %>;
    
</script>
<div class="row ">
    <div class="col-8 offset-3 mt-3">
        <h2><b><%=list.title%></b></h2>
    </div>
<body >
    <div class="card col-6 offset-3 show-card listing-card" >
    <img src="<%=list.image.url%>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
    <p class="card-text">Owned by : <i><%= list.owner.username %></i></p>
        
    <p class="card-text"><%=list.description%></p>
    <p class="card-text">&#8377;<%=list.price.toLocaleString("en-IN")%></p>   
    <p class="card-text"><%=list.location%><br/></p>    
    <p class="card-text"><%=list.country%><br/></p>    
    
    </div>
    </div>

    <% if(currUser && list.owner._id.equals(currUser._id)) { %>
    <div class="btns mb-3">
        <a href="/listings/<%=list._id%>/edit" class="btn btn-dark col-1 offset-2 edit-btn edit-bttn"> Edit</a><br/>
        <form method="post" action="/listings/<%=list._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
    </div>
    <% } %>
   
    
    
    
    <div class="col-8 offset-3 mb-3">
        
        <h4>Leave a Review</h4>
        <% if(currUser) { %>
            <hr>
        <form action="/listings/<%=list._id%>/reviews" method="post" novalidate class="needs-validation">
           
            <div class="mb-3 mt-3">
                <label class="form-label" for="rating">Rating</label>
            <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            </div>
             <div class="mb-3 mt-3">
                <label class="form-label" for="comment">Comments</label>
                <textarea required class="form-control" name="review[comment]" id="comment" cols="30" rows="5"></textarea>
                <div class="invalid-feedback">Please add some comment for review</div>
            </div>
            <button class="btn btn-outline-dark">submit</button>
        </form>
        <hr>
        <% } %>
        
        <% if(list.reviews.length >0) { %>
        <div class="row">
            <p><b>All Reviews</b></p>
        <% for(review of list.reviews) {%>
           <div class="card col-5 mb-3 ms-3">
            <div class="card-body">
                <h5 class="card-title mt-1">@<%= review.author.username%></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating%>"></p>
                <p class="card-text"><%= review.comment%></p>

                 
                 <form class="mb-2 mt-2" method="post" action="/listings/<%=list._id%>/reviews/<%=review._id%>?_method=DELETE">
                    <button class="btn btn-sm btn-dark">Delete</button>
                 </form>
            </div>
           </div>
        <% } %>
        </div>
        <% } %>
        
    </div>
     <div class="col-8 offset-3 mb-3">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>
    
    
    
</body>
    
   

</div>

<script src="/js/map.js"></script>